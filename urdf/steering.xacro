<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:property name="pi" value="3.1415926835897931" />

  <xacro:macro name="steering_macro" params="suffix parent x y yaw length">
    <joint name="${suffix}_joint" type="revolute">
      <origin rpy="0 0 0" xyz="${x} ${y} 0"/>
      <parent link="${parent}"/>
      <child  link="${suffix}_link"/>
      <axis xyz="0 0 1"/>
      <limit effort="1000.0" lower="-0.6" upper="0.6" velocity="0.5"/>
    </joint>

    <link name="${suffix}_link">
      <visual>
        <geometry>
          <cylinder radius="0.1" length="0.01"/>
        </geometry>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <material name="black">
          <color rgba="0.1 0.1 0.1 2.0"/>
        </material>
      </visual>
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <mass value="10.0"/>
        <inertia ixx="0.0250833"  ixy="0"  ixz="0" iyy="0.05" iyz="0" izz="0.0250833" />
        <!-- <mass value="10.0"/>
        <inertia ixx="0.4"  ixy="0"  ixz="0" iyy="0.6" iyz="0" izz="0.4" /> -->
      </inertial>
      <!-- <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
        <geometry>
          <cylinder radius="0.1" length="0.01" />
        </geometry>
      </collision> -->
    </link>
  </xacro:macro>  
</robot>